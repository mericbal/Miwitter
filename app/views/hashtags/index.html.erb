<%= render 'hashtags/hashtag_form' %>

<h2> recent hashtags </h2>

<% @hashtags.each_with_index do |x,i| %>
	<h3>
	<% if i%3==2 %>	
		<li id="green"> <%= link_to x.name, hashtag_path(x) %> </li>
	<% elsif i%3==1 %>
		<li id="red"> <%= link_to x.name, hashtag_path(x) %> </li>
	<% else %>
		<li id="blue"> <%= link_to x.name, hashtag_path(x) %> </li>
	<% end %>
	</h3>
<% end %>




<!-- ############ -->


<% @hashtags.each do |h| %>
	<% if h.user_id == nil %>
		<h3 id="blue"> <%= link_to h.name, hashtag_path(h) %> --- Created by anonymous ! </h3>
	<% else %>
		<h3 id="gree"> <%= link_to h.name, hashtag_path(h) %> --- Created by user <%= User.find(h.user_id) %> </h3>
	<% end %>
<% end %>