<!DOCTYPE html>
<html>
  <head>
    <title>Miwitter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <div id="menubar">
  	<ul id='menubar-list'>
  		<% if current_user == nil %>
  		<li> <%= link_to 'sign up', new_user_path, class: 'left-links' %> </li>
  		<li> <%= link_to 'login', login_path, class: 'left-links' %> </li>
  		<% else %>
  		<li> <%= link_to 'home', '/', class: 'left-links' %> </li>
  		<% end %>
  	</ul>
  </div>


	<% if current_user %>
  <div id='menu-user', class="dropdown">
				  <button class="button"> <%= current_user.username %> </button>
				  <div class="dropdown-content">
						<%= link_to 'logout', logout_path %>
						<%= link_to 'profile', user_path(current_user) %>
			  	</div>
  </div>
	<% end %>

  <body>
    <%= yield %>
  </body>
</html>
