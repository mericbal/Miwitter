<section id="tweets-container">

<% @tweets.each do |t| %>
<ul>
  <li class="tweet">
    <span> <%= image_tag("https://pbs.twimg.com/profile_images/2858734172/db7da718fd369eba6184973631d7d84a_bigger.jpeg") %> </span>
    <span id="red"> > tweet id: <%= t.id %> </span>
    <% if @user.id == current_user.id %>
    <span> <%= link_to 'delete tweet', user_tweet_path(@user.id, t), method: :delete %> </span> 
    <% end %>
    
    <div class="tweet-content">
      <p id="green"> <%= t.body %> </p>
      <p id="blue"> <%= t.likes.count %> <%= image_tag 'thumbs_up', {width: 20, length: 20} %>  ||| <%= t.dislikes.count %> <%= image_tag 'thumbs_down', {width: 20, length: 20} %>
      <span id="red"> <%= t.posted_when? %> </span> ||| <span> <%= link_to 'like', user_tweet_like_path(@user, t.id) %> ||| <%= link_to 'dislike', user_tweet_dislike_path(@user, t.id) %></span> </p>
    </div>
  </li>
</ul>
<% end %>

</section>